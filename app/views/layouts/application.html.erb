<!DOCTYPE html>
<html>
  <head>
    <title>Payermusic</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav>
        <a href="/">TOP</a>
        <% if user_signed_in? %>
          <%= link_to 'ログアウト', '/log_out' %>
        <% else %>
          <%= link_to 'Spotifyでログイン', '/auth/spotify'%>
        <% end %>
      </nav>
    </header>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
